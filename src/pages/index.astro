---
import PrimaryButton from '../components/PrimaryButton.astro';
import Layout from '../layouts/Layout.astro';
import "../styles/global.css"
---

<Layout>
	<section class="pb-[80px] bg-[url(./src/assets/pattern-light-bg.svg)] bg-light-salmon-50 pt-6 px-4 md:px-8 md:pt-8 flex flex-col overflow-y-hidden" id="hero-section">
		<header class="lg:max-w-[1440px] lg:mx-auto lg:min-w-[1170px] lg:mb-20">
			<img src="./src/assets/logo.svg" alt="Tech book club logo" width="190px" height="36px">
		</header>
		
		<div class="lg:max-w-[1440px] mx-auto lg:flex lg:items-center lg:gap-16 relative ">

			<div class="flex flex-col gap-6 mt-12 md:mt-16 lg:mt-20  lg:max-w-[570px]">
				<h1 style="background: var(--text-gradient); background-clip: text; -webkit-text-fill-color: transparent;" class="text-preset-1-m text-neutral-900 tracking-[-1px] md:text-preset-1">Join the ultimate tech book club</h1>
				<p class="text-preset-5 text-neutral-700 tracking-[-0.5px] mb-3 md:pr-6">Turn your reading time into learning time with fellow tech enthusiasts. Get curated recommendations, join vibrant discussions, and level up your skills one chapter at a time.</p>
			<div class="flex flex-col gap-5">
				<PrimaryButton>
					Review Membership Options
					<img src="./src/assets/icon-arrow-down.svg" alt="">
				</PrimaryButton>
				
				<div class="flex items-center gap-3 mb-11">
					<img src="./src/assets/image-avatars.webp" alt="users avatars" width="110px" height="40px">
					<div>
						<div class="flex gap-0">
							<img src="./src/assets/icon-star.svg" alt="star">
							<img src="./src/assets/icon-star.svg" alt="star">
							<img src="./src/assets/icon-star.svg" alt="star">
							<img src="./src/assets/icon-star.svg" alt="star">
							<img src="./src/assets/icon-star.svg" alt="star">
						</div>
						<p class="text-neutral-700 font-[Martian_Mono] text-[14px] leading-[1.2] tracking-[-1px]">200+ developers joined already</p>
					</div>
				</div>
			</div>
			</div>
			
			
			<picture class="h-fit z-[10]">
				<source srcset="../src/assets/image-hero-tablet.webp" media="(min-width: 768px)">
				<source srcset="../src/assets/image-hero-desktop.webp" media="(min-width:1440px)">
				<img src="../src/assets/image-hero-mobile.webp" alt="hero image" class="rounded-[5px] min-h-[385px] lg:max-w-[540px] lg:max-h-[606px] block">
			</picture>
			<div class="w-[684px] h-[684px] bg-glow blur-[200px] rounded-full absolute right-[-50%] bottom-[-50%] z-[1] hidden md:block lg:block">

			</div>
		</div>
	</section>
</Layout>
