---
import PrimaryButton from '../components/PrimaryButton.astro'
const {title, price, features = [], buttonText, buttonHref, featured=false, frequency="/monthly"} = Astro.props
---

<article class=`p-6 border border-[#e6e1df] rounded-[8px] ${featured ? "bg-[#faf5f3]" : "" } md:min-w-[340px] lg:min-w-[350px] relative overflow-hidden`>
	<div class="pb-6 border-b border-neutral-200">
		<h3 class="text-martian-mono font-semibold text-[24px] leading-[1.1] tracking-[-1px] mb-6">{title}</h3>
		<p class="text-[20px]"><strong class="text-martian-mono font-semibold text-[34px] leading-[1.3] tracking-[-1px]">{price}</strong>{frequency}</p>
	</div>
	<ul class="mt-[26px] mb-8 flex flex-col gap-[18px] text-[20px] text-neutral-900">
		{
            features.map((feature: string) => (
				<li class="flex gap-3 items-center">
                    <img src="./assets/icon-check.svg" alt="check icon" class="w-6 h-6" loading="lazy">
                    <p>{feature}</p>
                </li>
			))
        }
	</ul>
	<PrimaryButton href={buttonHref}>{buttonText}</PrimaryButton>
	<div class={`w-[684px] h-[684px] blur-[140px] bg-glow  rounded-full absolute  bottom-[-510px] right-[-460px] z-[0] pointer-events-none ${featured ? "block" : "hidden"}`}>
	</div>
</article>